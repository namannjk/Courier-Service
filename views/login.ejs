<%- include('partials/header') %>

<section
  class="header3 cid-rRAJ0Vo8T2 mbr-fullscreen mbr-parallax-background"
  id="header3-1"
>
  <div
    class="mbr-overlay"
    style="opacity: 0.8; background-color: rgb(255, 255, 255)"
  ></div>

  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">
                <% if (success==="invalid") { %>
                <div style="text-align: center;margin: 1rem;padding: 0.5rem;background: #fe4000;" class="alert alert-success">
                  Invalid username or Password !!
                </div>

                <% } %>

                <form method="post" action="login">
                  <div class="form-outline mb-3">
                    <label class="form-label" for="form2Example11"
                      >User ID</label
                    >
                    <input
                      type="text"
                      name="email"
                      id="form2Example11"
                      class="form-control"
                      placeholder="Enter USER ID"
                    />
                  </div>

                  <div class="form-outline mb-6">
                    <label class="form-label" for="form2Example22"
                      >Password</label
                    >
                    <input
                      type="password"
                      name="password"
                      id="form2Example22"
                      class="form-control"
                      placeholder="Password"
                    />
                  </div>

                  <div class="text-center pt-1 pb-1">
                    <button
                      class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"
                      type="submit"
                      style="margin-left: 0px"
                    >
                      Log in
                    </button>
                  </div>
                  <p>
                    Any Issue ? Contact
                    <a href="mailto:help@jaincouriers.in"
                      >help@jaincouriers.in</a
                    >
                  </p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
