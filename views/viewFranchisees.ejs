<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Franchise List</title>
</head>
<body>
  <style>
    /* CSS styles for the table */
    /* Center the page content */
    body {
      align-items: center;
      height: 100vh;
    }
  
    /* Style the table */
    table {
      border-collapse: collapse;
      width: 80%;
      max-width: 800px;
      margin: 0 auto;
      background-color: #fff;
      box-shadow: 0px 0px 5px 0px rgba(0, 0, 0, 0.3);
    }
  
    th,
    td {
      padding: 15px;
      text-align: center;
    }
  
    th {
      background-color: #292929;
      color: #fff;
    }
  
    tr:nth-child(even) {
      background-color: #f2f2f2;
    }
  
    /* Style the heading */
    h1 {
      font-size: 2rem;
      margin-bottom: 30px;
      text-align: center;
      color: #292929;
    }
  
    /* Add hover effect on table rows */
    tr:hover {
      background-color: #e6e6e6;
    }
  
    /* Center the container */
    .container {
      text-align: center;
    }
  </style>
  
  <h1>Franchisees List</h1>
  
  <div class="container">
    <table>
      <tr>
        <th>Profile</th>
        <th>Name</th>
        <th>Pincode</th>
        <th>Mobile</th>
        <th>Email</th>
        <th>Address</th>
      </tr>
      <% franchisees.forEach(function(franchisee) { %>
      <tr>
        <td>
          <img style="width: 60%; border: 2px solid #555" src="data:image/jpeg;base64, <%= franchisee.profilePhoto.data.toString('base64') %>" />
        </td>
        <td><%= franchisee.contactPerson %></td>
        <td><%= franchisee.pincode %></td>
        <td><%= franchisee.contactNo %></td>
        <td><%= franchisee.email %></td>
        <td><%= franchisee.address %></td>
  
      </tr>
      <% }); %>
    </table>
  </div>
  
</body>
</html>